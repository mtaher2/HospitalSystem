<%- include('../partials/header', {
  title: 'Results',
  stylesheetName: 'styles',
  headerTitle: 'Results'
}) %>

<div class="results-page">
  <!-- Search Section -->
  <div class="search-section">
    <label for="nationalId">National ID</label>
    <div class="input-group">
      <input
        type="text"
        id="nationalId"
        class="search-input"
        pattern="[34]\\d{13}"
        placeholder="Enter National ID"
        title="Please enter a valid National ID"
      />
      <button class="search-btn">Search</button>
    </div>
  </div>

  <!-- Results Table -->
  <div class="outer-container">
    <div class="inner-card">
      <table class="results-table">
        <thead>
          <tr>
            <th>Patient's Name</th>
            <th>Test Name</th>
            <th>Date</th>
            <th>Status</th>
            <th>Results <img src="/images/download-icon.png" class="download-icon" alt="Download"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>John Doe</td>
            <td>Blood Test</td>
            <td>2024-01-25</td>
            <td><span class="status completed">Completed</span></td>
            <td>
              <button class="btn view">View</button>
              <button class="btn print">Print</button>
            </td>
          </tr>
          <tr>
            <td>Jane Smith</td>
            <td>PCR Test</td>
            <td>2024-01-26</td>
            <td><span class="status completed">Completed</span></td>
            <td>
              <button class="btn view">View</button>
              <button class="btn print">Print</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<style>
/* Base & Typography */
.results-page {
  background-color: #f9fafa;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #333;
  padding: 2rem 1rem;
}

/* Search Section */
.search-section {
  background: #fff;
  padding: 1.5rem;
  border-radius: 12px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  margin-bottom: 2rem;
}

.search-section label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #1a394d;
}

.input-group {
  display: flex;
  gap: 1rem;
}

.search-input {
  flex: 1;
  padding: 0.8rem;
  border: 1px solid #dcdcdc;
  border-radius: 4px;
  font-size: 1rem;
}

.search-btn {
  background-color: #45a049;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 0.8rem 1.5rem;
  cursor: pointer;
  font-weight: 600;
  transition: background-color 0.2s;
}

.search-btn:hover {
  background-color: #3d8b41;
}

/* Outer Container */
.outer-container {
  max-width: 100%;
  margin: 0 2rem 2rem;
  background-color: #ececec;
  padding: 2rem;
  border: 1px solid #ccc;
  border-radius: 8px;
}

/* Inner Card */
.inner-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

/* Results Table */
.results-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin: 0;
}

.results-table thead {
  background-color: #f1f8fa;
}

.results-table th,
.results-table td {
  padding: 1rem 1.5rem;
  text-align: left;
  vertical-align: middle;
  font-size: 1rem;
}

.results-table th {
  font-weight: 600;
  color: #1a394d;
  border-bottom: 2px solid #dcdcdc;
}

.results-table td {
  border-top: 1px solid #e6e6e6;
}

.results-table th + th,
.results-table td + td {
  border-left: 1px solid #dcdcdc;
}

/* Status */
.status.completed {
  background: #e8f5e9;
  color: #2e7d32;
  padding: 0.5rem 1rem;
  border-radius: 12px;
  font-size: 0.9rem;
  display: inline-block;
}

/* Buttons */
.btn {
  padding: 0.6rem 1.2rem;
  border: none;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
  margin: 0.2rem;
  transition: background-color 0.2s, transform 0.1s;
}

.btn.view,
.btn.print {
  background-color: #45a049;
  color: white;
}

.btn:hover {
  background-color: #3d8b41;
  transform: translateY(-1px);
}

.download-icon {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-left: 6px;
}

/* Responsive styles */
@media (max-width: 768px) {
  .outer-container {
    margin: 0 1rem 1rem;
    padding: 1rem;
  }

  .results-table th,
  .results-table td {
    padding: 0.75rem 0.5rem;
    font-size: 0.9rem;
  }

  .search-section {
    padding: 1rem;
  }

  .input-group {
    flex-direction: column;
    gap: 0.5rem;
  }

  .search-btn {
    width: 100%;
  }
}
</style>

<%- include('../partials/footer') %>
