stylesheetName:'styles', headerTitle: 'Reception Bills' }) %> <%-
include('../partials/receptionNav') %>

<div class="medication-container">
  <div class="top-strip"></div>
  <!-- White strip before tabs -->

  <!-- Search Bar -->
