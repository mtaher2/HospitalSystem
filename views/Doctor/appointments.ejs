<%- include('../partials/header', {title: 'Appointments', stylesheetName: 'styles', headerTitle: 'Appointments' }) %> --%>
<%- include('../partials/DoctorNav') %>
<div class="search-container_Doctor_Appointments">
  <h2>Search Filters</h2>
  <form id="filterForm" method="GET" action="/reception-appointment" class="filter-form">
    <div class="filter-group">
      <label for="filterName">Name</label>
      <input type="text" id="filterName" name="name" class="filter-input" placeholder="Enter name">
    </div>
    <div class="filter-group">
      <label for="filterCondition">Condition</label>
      <input type="text" id="filterCondition" name="condition" class="filter-input" placeholder="Enter condition">
    </div>
    <div class="filter-group">
      <label for="filterDate">Date</label>
      <input type="date" id="filterDate" name="date" class="filter-input">
    </div>
  </form>
</div>
<div class="content-body">
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>Status</th>
          <th>Condition</th>
          <th>PR</th>
          <th>Labs</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>John Doe</td>
          <td>2023-01-01</td>
          <td>12:00 PM</td>
          <td>Checked In</td>
          <td>Condition A</td>
          <td>
            <button class="btn-show">Show</button>
          </td>
          <td>
            <button class="btn-order">Order</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
